<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_msg_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="BlueToothアドレス:"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_button2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/search_button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:onClick="PrintSearch"
        android:text="検索"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/main_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="-未検出-"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/main_msg_address_text"
        app:layout_constraintStart_toStartOf="@+id/main_msg_address_text"
        app:layout_constraintTop_toBottomOf="@+id/main_msg_address_text"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/pageback"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="264dp"
        android:onClick="PrintBack"
        android:text="印刷"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>